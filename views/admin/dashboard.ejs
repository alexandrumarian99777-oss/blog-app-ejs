<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
  <div class="admin-container">
    <div class="admin-header">
      <h1>üìä Admin Dashboard</h1>
      <div class="admin-nav">
        <a href="/admin/create-blog" class="admin-btn">‚ûï New Blog</a>
        <a href="/" class="admin-btn admin-btn-secondary">üè† View Site</a>
        <a href="/admin/logout" class="admin-btn admin-btn-danger">üö™ Logout</a>
      </div>
    </div>

    <div class="dashboard-grid">
      <div class="dashboard-card">
        <h3>üìù Total Blogs</h3>
        <div class="count"><%= blogs.length %></div>
      </div>
      <div class="dashboard-card">
        <h3>‚≠ê Total Reviews</h3>
        <div class="count"><%= reviews.length %></div>
      </div>
    </div>

    <div class="admin-table">
      <h3>üìö Manage Blogs</h3>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Author</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% blogs.forEach(blog => { %>
            <tr>
              <td><%= blog.title %></td>
              <td><%= blog.category %></td>
              <td><%= blog.author %></td>
              <td><%= new Date(blog.createdAt).toLocaleDateString() %></td>
              <td>
                <div class="action-buttons">
                 <a href="/blog/<%= blog.slug %>" class="admin-btn btn-small admin-btn-secondary">View</a>
                  <a href="/admin/edit-blog/<%= blog.slug %>" class="admin-btn btn-small">Edit</a>
                  <form method="POST" action="/admin/delete-blog/<%= blog.slug %>" style="display: inline;">
                    <button type="submit" class="admin-btn btn-small admin-btn-danger" onclick="return confirm('Delete this blog?')">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="review-form">
      <h3>‚ûï Add New Review</h3>
      <form method="POST" action="/admin/create-review">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required>
        </div>
        
        <div class="form-group">
          <label for="rating">Rating</label>
          <select id="rating" name="rating" required>
            <option value="5">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê (5 stars)</option>
            <option value="4">‚≠ê‚≠ê‚≠ê‚≠ê (4 stars)</option>
            <option value="3">‚≠ê‚≠ê‚≠ê (3 stars)</option>
            <option value="2">‚≠ê‚≠ê (2 stars)</option>
            <option value="1">‚≠ê (1 star)</option>
          </select>
        </div>
        
        <div class="form-group">
          <label for="comment">Comment</label>
          <textarea id="comment" name="comment" required></textarea>
        </div>
        
        <button type="submit" class="admin-btn">Add Review</button>
      </form>
    </div>

    <div class="admin-table">
      <h3>‚≠ê Manage Reviews</h3>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Rating</th>
            <th>Comment</th>
            <th>Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% reviews.forEach(review => { %>
            <tr>
              <td><%= review.name %></td>
              <td>
                <% for(let i = 0; i < review.rating; i++) { %>‚≠ê<% } %>
              </td>
              <td><%= review.comment.substring(0, 50) %>...</td>
              <td><%= new Date(review.createdAt).toLocaleDateString() %></td>
              <td>
                <form method="POST" action="/admin/delete-review/<%= review._id %>" style="display: inline;">
                  <button type="submit" class="admin-btn btn-small admin-btn-danger" onclick="return confirm('Delete this review?')">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>