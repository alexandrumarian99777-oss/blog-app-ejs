<%- include('partials/header') %>

<section class="hero">
  <div class="hero-content">
    <h1>‚ú® Welcome to Our Blog</h1>
    <p>Discover amazing stories, insights, and inspiration from our community of writers</p>
    <a href="#blogs" class="btn">Explore Blogs</a>
  </div>
</section>

<div class="container" id="blogs">
  <div class="section-title">
    <h2>üìö Latest Blogs</h2>
    <p>Fresh content from our talented writers</p>
  </div>
  
  <% if (blogs.length > 0) { %>
    <div class="blog-grid">
      <% blogs.forEach(blog => { %>
        <div class="blog-card" onclick="window.location.href='/blog/<%= blog._id %>'">
          <img src="<%= blog.imageUrl %>" alt="<%= blog.title %>">
          <div class="blog-content">
            <div class="blog-meta">
              <span class="blog-category"><%= blog.category %></span>
              <span>üìÖ <%= new Date(blog.createdAt).toLocaleDateString() %></span>
            </div>
            <h3><%= blog.title %></h3>
            <p><%= blog.excerpt %></p>
            <a href="/blog/<%= blog._id %>">Read More ‚Üí</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p style="text-align: center; color: #64748b;">No blogs available yet. Check back soon!</p>
  <% } %>
</div>

<div class="container" id="reviews">
  <div class="section-title">
    <h2>‚≠ê What Our Readers Say</h2>
    <p>Testimonials from our amazing community</p>
  </div>
  
  <% if (reviews.length > 0) { %>
    <div class="reviews-grid">
      <% reviews.forEach(review => { %>
        <div class="review-card">
          <div class="review-header">
            <img src="<%= review.avatar %>" alt="<%= review.name %>" class="review-avatar">
            <div class="review-info">
              <h4><%= review.name %></h4>
              <div class="stars">
                <% for(let i = 0; i < review.rating; i++) { %>
                  ‚≠ê
                <% } %>
              </div>
            </div>
          </div>
          <p>"<%= review.comment %>"</p>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p style="text-align: center; color: #64748b;">No reviews yet. Be the first to share your thoughts!</p>
  <% } %>
</div>

<%- include('partials/footer') %>