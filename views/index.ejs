<%- include('partials/header') %>

<section class="hero">
  <div class="hero-content">
    <h1>âœ¨ Welcome to Our Blog</h1>
    <p>Discover amazing stories, insights, and inspiration from our community of writers</p>
    <a href="#blogs" class="btn">Explore Blogs</a>
  </div>
</section>

<div class="container" id="blogs">
  <div class="section-title">
    <h2>ğŸ“š Latest Blogs</h2>
    <p>Fresh content from our talented writers</p>
  </div>

  <% if (blogs && blogs.length > 0) { %>
    <div class="blog-grid">
      <% blogs.forEach(blog => { %>
        <div class="blog-card" onclick="window.location.href='/blog/<%= blog.slug%>'">
          <img src="<%= blog.imageUrl || '/images/default.jpg' %>" alt="<%= blog.title %>">
          <div class="blog-content">
            <div class="blog-meta">
              <span class="blog-category"><%= blog.category %></span>
              <span>ğŸ“… <%= new Date(blog.createdAt).toLocaleDateString() %></span>
            </div>

            <h3><%= blog.title %></h3>
            <p><%= blog.excerpt || blog.content.substring(0, 150) + '...' %></p>
            <a href="/blog/<%= blog.slug %>">Read More â†’</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p style="text-align: center; color: #64748b;">No blogs available yet. Check back soon!</p>
  <% } %>
</div>

<div class="container" id="reviews">
  <div class="section-title">
    <h2>â­ Reader Reviews</h2>
    <p>See what our readers are saying</p>
  </div>

  <% if (reviews && reviews.length > 0) { %>
    <div class="reviews-grid">
      <% reviews.forEach(review => { %>
        <div class="review-card">
          <div class="review-header">
            <strong><%= review.name %></strong>
            <div class="rating">
              <% for (let i = 0; i < review.rating; i++) { %>
                â­
              <% } %>
            </div>
          </div>

          <p>"<%= review.comment %>"</p>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p style="text-align: center; color: #64748b;">No reviews yet. Be the first to share your thoughts!</p>
  <% } %>
</div>

